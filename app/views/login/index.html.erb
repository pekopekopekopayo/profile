
<section class="hero">
    <%= form_with model: @user, url: certification_path, local: true, method: :post do |form| %>
        <div class="hero-body">
            <div class="container">
                <div class="columns is-centered">
                    <div class="column is-5-tablet is-4-desktop is-3-widescreen">
                        <div class="field">
                            <label for="" class="label">Email</label>
                            <div class="control has-icons-left">
                                <%= form.text_field :email, class: 'input' %>
                                <span class="icon is-small is-left">
                                    <i class="fa fa-envelope"></i>
                                </span>
                            </div>
                        </div>
                        
                        <label for="" class="label">Password</label>

                        <div class="control has-icons-left">
                            <%= form.password_field :password_digest, class: 'input' %>
                            <span class="icon is-small is-left">
                            <i class="fa fa-lock"></i>
                            </span>
                        </div>

                        <hr>
                        <div style="display: flex; justify-content: center; "class="is-justify-content-center">
                            <%= form.submit 'login', class: 'button is-success'%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</section>