<% if @user.errors.messages.present? %>
    <% @user.errors.messages.each do |_key, value| %>
        <% value.each do |msg| %>
            <div class="notification is-danger" >
                <%= msg %>            
                <button class="delete" onclick="close_div(this)"></button>
            </div>
        <% end %>
    <% end %>
<% end %>

<section class="hero">
    <%= form_with model: @user, url: user_update_path, local: true, method: :post do |form| %>
        <div class="hero-body">
            <div class="container">
                <div class="columns is-centered">
                    <div class="column is-5-tablet is-4-desktop is-3-widescreen">
                        <div class="field">
                            <label for="" class="label-show">Email:</label>
                            <label for="" class="label-show"><%= @user.email %></label>
                        </div>

                        <div class="field">
                            <label for="" class="label-show">Authority:</label>
                            <label for="" class="label-show"><%= @user.authority %></label>
                        </div>
                        
                        <div class="field">
                            <label for="" class="label-show">Created_at:</label>
                            <label for="" class="label-show"><%= @user.created_at.to_date %></label>
                        </div>

                        <label for="" class="label-show">Password</label>

                        <div class="control has-icons-left">
                            <%= form.password_field :password, class: 'input' %>
                            <span class="icon is-small is-left">
                            <i class="fa fa-lock"></i>
                            </span>
                        </div>

                        <label for="" class="label-show">Confirm Password</label>

                        <div class="control has-icons-left">
                            <%= form.password_field :password_confirmation, class: 'input' %>
                            <span class="icon is-small is-left">
                            <i class="fa fa-lock"></i>
                            </span>
                        </div>

                        <hr>
                        <div style="display: flex; justify-content: center; "class="is-justify-content-center">
                            <%= form.submit 'login', class: 'button is-success'%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</section>